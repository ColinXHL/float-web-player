<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== 主题色 ==================== -->
    
    <!-- 主色调 (蓝色) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#1084D8"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#006CC1"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#1A8FE8"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1A3A5C"/>
    
    <!-- 次要色调 (灰色) -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="SecondaryPressedBrush" Color="#333333"/>

    <!-- ==================== 背景色 ==================== -->
    
    <!-- 主背景 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    
    <!-- 表面/卡片背景 -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="#333333"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SurfaceDarkBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="SurfaceDarkerBrush" Color="#252525"/>
    
    <!-- 控件背景 -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#444444"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#555555"/>

    <!-- ==================== 边框色 ==================== -->
    
    <SolidColorBrush x:Key="BorderBrush" Color="#444444"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#555555"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#333333"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#0078D4"/>

    <!-- ==================== 文本色 ==================== -->
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#888888"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TextPlaceholderBrush" Color="#888888"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#CCCCCC"/>

    <!-- ==================== 状态色 ==================== -->
    
    <!-- 危险/错误 (红色) -->
    <SolidColorBrush x:Key="DangerBrush" Color="#B91C1C"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="DangerPressedBrush" Color="#991B1B"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="DangerDarkBrush" Color="#C62828"/>
    <SolidColorBrush x:Key="DangerBackgroundBrush" Color="#3A1A1A"/>
    <SolidColorBrush x:Key="DangerCloseHoverBrush" Color="#C42B1C"/>
    
    <!-- 警告 (黄色/橙色) -->
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="WarningTextBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#5C4020"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="#7F5D1D"/>
    <SolidColorBrush x:Key="WarningPressedBrush" Color="#996B1B"/>
    <SolidColorBrush x:Key="WarningDisabledBrush" Color="#3A2A1A"/>
    <SolidColorBrush x:Key="WarningDisabledTextBrush" Color="#8B7355"/>
    
    <!-- 成功 (绿色) -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4ADE80"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#1A3A1A"/>
    
    <!-- 信息 (蓝色) -->
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#1A2A3A"/>

    <!-- ==================== 滚动条色 ==================== -->
    
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#555555"/>
    <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="#2A2A2A"/>

    <!-- ==================== 特殊用途色 ==================== -->
    
    <!-- 链接色 -->
    <SolidColorBrush x:Key="LinkBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="LinkHoverBrush" Color="#3399FF"/>
    
    <!-- 选择色 -->
    <SolidColorBrush x:Key="SelectionBrush" Color="#0078D4"/>
    
    <!-- 禁用状态 -->
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#666666"/>
    <SolidColorBrush x:Key="DisabledTagBackgroundBrush" Color="#2A2A2A"/>

</ResourceDictionary>
