                </Grid>
            </Border>

            <!-- å†…å®¹åŒº -->
            <Grid Grid.Row="1" Margin="10,10,10,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- æœç´¢æ  -->
                <Grid Grid.Row="0" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="SearchBox"
                             Grid.Column="0"
                             Background="#2D2D2D"
                     Foreground="White"
                             BorderBrush="#444"
                             BorderThickness="1"
                             Padding="10,8"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Grid.Column="0" Text="æœç´¢åŽ†å²è®°å½•..." Foreground="#888" FontSize="14"
                               Padding="12,8" VerticalAlignment="Center" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Grid.Column="1" Content="æ¸…ç©ºå…¨éƒ¨" Style="{StaticResource DeleteButtonStyle}"
                            Margin="10,0,0,0" Click="BtnClearAll_Click"/>
