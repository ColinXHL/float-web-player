        <!-- åŽ†å²åˆ—è¡¨å®¹å™¨ -->
                <Border Grid.Row="1" Background="#252525" BorderBrush="#333" BorderThickness="1" CornerRadius="4">
                    <Grid>
                        <!-- åŽ†å²åˆ—è¡¨ -->
