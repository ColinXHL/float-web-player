                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <!-- ç©ºçŠ¶æ€æç¤º -->
                        <TextBlock x:Name="EmptyHint" Text="æš‚æ— åŽ†å²è®°å½•" Foreground="#888" FontSize="14"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
