<helpers:AnimatedWindow x:Class="FloatWebPlayer.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:FloatWebPlayer.Helpers"
        Title="通知"
        MaxWidth="350"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False">

    <helpers:AnimatedWindow.Resources>
        <!-- 关闭按钮样式 -->
        <Style x:Key="NotificationCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <TextBlock Text="✕" FontSize="12" Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </helpers:AnimatedWindow.Resources>

    <!-- 主容器 - 用于动画 -->
    <Border x:Name="MainContainer" CornerRadius="8" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <!-- 内部布局：左侧彩色边框 + 内容 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4"/>   <!-- 左侧彩色边框 -->
                <ColumnDefinition Width="*"/>   <!-- 内容区 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧彩色边框 -->
            <Border x:Name="AccentBorder" Grid.Column="0" 
                    Background="#0078D4" 
                    CornerRadius="8,0,0,8"/>

            <!-- 内容区背景 -->
            <Border Grid.Column="1" Background="#2D2D2D" CornerRadius="0,8,8,0">
                <Grid Margin="12,10,8,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>  <!-- 图标 -->
                        <ColumnDefinition Width="*"/>     <!-- 文本 -->
                        <ColumnDefinition Width="Auto"/>  <!-- 关闭按钮 -->
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <TextBlock x:Name="IconText" Grid.Column="0"
                               Text="ℹ" FontSize="16"
                               Foreground="#0078D4"
                               VerticalAlignment="Top"
                               Margin="0,2,10,0"/>

                    <!-- 文本区域 -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- 标题（可选） -->
                        <TextBlock x:Name="TitleText"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,4"/>
                        
                        <!-- 消息内容 -->
                        <TextBlock x:Name="MessageText"
                                   FontSize="12"
                                   Foreground="#DDD"
                                   TextWrapping="Wrap"
                                   MaxWidth="260"/>
                    </StackPanel>

                    <!-- 关闭按钮 -->
                    <Button Grid.Column="2"
                            Style="{StaticResource NotificationCloseButtonStyle}"
                            VerticalAlignment="Top"
                            Margin="4,0,0,0"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
