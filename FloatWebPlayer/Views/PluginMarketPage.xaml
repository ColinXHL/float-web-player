<UserControl x:Class="FloatWebPlayer.Views.PluginMarketPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:FloatWebPlayer.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="480"
             Background="Transparent">
    
    <UserControl.Resources>
        <!-- 转换器 -->
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        
        <!-- 插件卡片样式 -->
        <Style x:Key="PluginCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <!-- 订阅按钮样式 -->
        <Style x:Key="SubscribeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 取消订阅按钮样式 -->
        <Style x:Key="UnsubscribeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C2020"/>
            <Setter Property="Foreground" Value="#F87171"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7C2D2D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#991B1B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 启用/禁用切换样式 -->
        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="track" Width="36" Height="20" CornerRadius="10"
                                    Background="#444" BorderThickness="0"/>
                            <Border x:Name="thumb" Width="16" Height="16" CornerRadius="8"
                                    Background="#888" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="thumb" Property="Background" Value="White"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumb" Property="Background" Value="#AAA"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="thumb" Property="Background" Value="#EEE"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 权限标签样式 -->
        <Style x:Key="PermissionTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <!-- 警告权限标签样式 -->
        <Style x:Key="WarningPermissionTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#5C4020"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <!-- 分隔标题样式 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="0,16,0,10"/>
        </Style>

        <!-- 下拉框样式 -->
        <Style x:Key="ProfileComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 头部：标题和 Profile 选择 -->
        <StackPanel Grid.Row="0">
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="插件管理" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="管理当前 Profile 的插件订阅" FontSize="12" Foreground="#888" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Profile 选择下拉框 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="当前 Profile：" FontSize="12" Foreground="#888" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ProfileSelector" Style="{StaticResource ProfileComboBoxStyle}"
                              MinWidth="120" SelectionChanged="ProfileSelector_SelectionChanged"
                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <StackPanel x:Name="ContentPanel">
                <!-- 已订阅插件区域 -->
                <TextBlock Text="── 已订阅插件 ──" Style="{StaticResource SectionTitleStyle}"/>
                <ItemsControl x:Name="SubscribedPluginList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PluginCardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 第一行：启用开关、名称、版本、按钮 -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 启用开关和名称 -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <CheckBox Style="{StaticResource ToggleCheckBoxStyle}"
                                                      IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                      Tag="{Binding Id}" 
                                                      Checked="PluginToggle_Changed" 
                                                      Unchecked="PluginToggle_Changed"
                                                      Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Version, StringFormat=' v{0}'}" FontSize="11" 
                                                       Foreground="#666" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                        </StackPanel>

                                        <!-- 按钮 -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="取消订阅" Style="{StaticResource UnsubscribeButtonStyle}"
                                                    Tag="{Binding Id}" Click="BtnUnsubscribe_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- 第二行：描述 -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                               FontSize="12" Foreground="#AAA" 
                                               TextWrapping="Wrap" Margin="0,8,0,0"/>

                                    <!-- 第三行：权限 -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0"
                                                Visibility="{Binding HasPermissions, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="权限：" FontSize="11" Foreground="#666" 
                                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ItemsControl ItemsSource="{Binding PermissionTags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{Binding TagStyle}">
                                                        <TextBlock Text="{Binding Name}" FontSize="10" 
                                                                   Foreground="{Binding TextColor}"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- 无已订阅插件提示 -->
                <TextBlock x:Name="NoSubscribedMessage" Text="暂无已订阅的插件" 
                           FontSize="12" Foreground="#555" Margin="0,0,0,8"
                           Visibility="Collapsed"/>

                <!-- 可用插件区域 -->
                <TextBlock Text="── 可用插件 ──" Style="{StaticResource SectionTitleStyle}"/>
                <ItemsControl x:Name="AvailablePluginList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PluginCardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 第一行：名称、版本、按钮 -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 名称和版本 -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Version, StringFormat=' v{0}'}" FontSize="11" 
                                                       Foreground="#666" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                        </StackPanel>

                                        <!-- 订阅按钮 -->
                                        <Button Grid.Column="1" Content="订阅" Style="{StaticResource SubscribeButtonStyle}"
                                                Tag="{Binding Id}" Click="BtnSubscribe_Click"/>
                                    </Grid>

                                    <!-- 第二行：描述 -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                               FontSize="12" Foreground="#AAA" 
                                               TextWrapping="Wrap" Margin="0,8,0,0"/>

                                    <!-- 第三行：权限 -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0"
                                                Visibility="{Binding HasPermissions, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="权限：" FontSize="11" Foreground="#666" 
                                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ItemsControl ItemsSource="{Binding PermissionTags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{Binding TagStyle}">
                                                        <TextBlock Text="{Binding Name}" FontSize="10" 
                                                                   Foreground="{Binding TextColor}"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- 无可用插件提示 -->
                <TextBlock x:Name="NoAvailableMessage" Text="暂无可用的插件" 
                           FontSize="12" Foreground="#555"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
