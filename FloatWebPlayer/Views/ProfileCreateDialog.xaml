                <Button x:Name="BtnCreate" Content="åˆ›å»º" Style="{StaticResource PrimaryButtonStyle}" 
                        Click="BtnCreate_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
